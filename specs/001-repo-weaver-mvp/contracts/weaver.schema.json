{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Repo Weaver Config",
  "type": "object",
  "required": ["version", "modules", "apps"],
  "properties": {
    "version": {
      "type": "string",
      "enum": ["1.0"]
    },
    "modules": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "source", "ref"],
        "properties": {
          "name": { "type": "string" },
          "source": { "type": "string", "format": "uri" },
          "ref": { "type": "string" }
        }
      }
    },
    "apps": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "type", "path"],
        "properties": {
          "name": { "type": "string" },
          "type": { "type": "string" },
          "path": { "type": "string" },
          "inputs": {
            "type": "object",
            "additionalProperties": true
          }
        }
      }
    }
  }
}
